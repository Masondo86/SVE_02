{
  "name": "linktech-scam-engine",
  "version": "0.1.0",
  "description": "LinkTech Scam Verification Engine - tests and CI",
  "type": "module",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.mjs || true",
    "ci": "npm run lint && npm test"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "jest": "^29.6.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.*",
      "**/server/tests/**/*.test.*"
    ],
    "verbose": true
  },
  "license": "MIT"
}
